                            with open('вірш.txt', 'r', encoding='utf-8') as file:
    for line in file:
        print(line)
author = input("Ведіть автора:")
with open('вірш.txt', "a", encoding="utf-8") as file:
    file.write(author)
while True:
    answer = input('Додати це одну цитату (так/ні):')
    if answer == 'так':
        quote = input('Введіть цитату:')
        author = input('Введіть автора:')
        file = open('вірш.txt', "a", encoding="utf-8")
        file.write(quote +"\n" + author)
        file.close()
    else:
        break
with open('вірш.txt', 'r', encoding='ulf-8') as file:
    for line in file:
        print(line)
